 const words = [
  "Love You",
  "Miss You",
  "Forever ‚ù§Ô∏è",
  "My Star ‚ú®",
  "Only You",
  "Sweetheart",
  "Dream",
  "My Angel",
  "With You",
  "Always üíñ",
  "Hug Me",
  "Kiss üíã",
  "Shine",
  "My World üåç",
  "Together",
  "Infinity ",
  "Believe",
  "Destiny",
  "My Queen üëë",
  "Heart üíï"
];

    function createFallingWord() {
      const randomWord = words[Math.floor(Math.random() * words.length)];
      const wordElement = document.createElement('div');
      wordElement.textContent = randomWord;
      wordElement.classList.add('falling-word');

      // –≤–∏–ø–∞–¥–∫–æ–≤–∏–π left
      const maxLeft = window.innerWidth - 100;
      const randomLeft = Math.random() * maxLeft;
      wordElement.style.left = `${randomLeft}px`;

      // –≤–∏–ø–∞–¥–∫–æ–≤–∞ —à–≤–∏–¥–∫—ñ—Å—Ç—å
      const randomDuration = 5 + Math.random() * 10;
      wordElement.style.animationDuration = `${randomDuration}s`;

      // –≤–∏–ø–∞–¥–∫–æ–≤–µ –∑–º—ñ—â–µ–Ω–Ω—è –ø–æ Z
      const randomZ = Math.random() * 600 - 300; // –≤—ñ–¥ -300px –¥–æ +300px
      wordElement.style.transform = `translateZ(${randomZ}px)`;

      document.getElementById('falling-words-container').appendChild(wordElement);

      setTimeout(() => {
        wordElement.remove();
      }, randomDuration * 1000);
    }

    // –°—Ç–≤–æ—Ä—é—î–º–æ –Ω–æ–≤—ñ —Å–ª–æ–≤–∞
    setInterval(createFallingWord, 300);

    // –û–¥—Ä–∞–∑—É —Ç—Ä–æ—Ö–∏ —Å–ª—ñ–≤ –Ω–∞ —Å—Ç–∞—Ä—Ç—ñ
    for (let i = 0; i < 15; i++) {
      setTimeout(createFallingWord, i * 500);
    }
